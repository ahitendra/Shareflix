<article class="col-xs-4">
  <div class="cards"><span class="glyphicon glyphicon-flash icon"></span>
    <hr class="divider"/>
    <h2 class="title"><%= @group.name %><%= " (formed)" if @group.formed%> </h2>
    <div class="info">
      <hr class="divider"/>
      <div class="list-group">
      	<% @group.users.each do |user| %>
      		<% if user.id == current_user.id %>
        		<a href="#" class="list-group-item disabled"><%= user.name %> (me)</a>
        	<% else %>
        		<a href="#" class="list-group-item disabled"><%= user.name %></a>
        	<% end %>
        <% end %>
      </div>
      <% if @current_user.groups.include?(@group) %>
      	<a class="btn btn-lg center-block"><strike>Join</strike></a>
      <% else %>
	      <%= form_for :group, url: "/groups/join/#{@group.id}" do |g| %>
	      	<div class="btn btn-lg center-block">
	      	  <%= g.submit "Join" %>
	      	</div>
	      	<% end %>
      <% end %>
    </div>
  </div>
</article>