<div class="row">
	<% @groups.each do |group| %>
		<article class="col-xs-4">
		  <div class="cards"><span class="glyphicon glyphicon-flash icon"></span>
		    <hr class="divider"/>
		    <h2 class="title"><%= group.name %></h2>
		    <div class="info">
		      <hr class="divider"/>
		      <div class="list-group">
		      	<% group.users.each do |user| %>
		      		<% if user.id == current_user.id %>
		        		<a href="#" class="list-group-item disabled"><%= user.name %> (me)</a>
		        	<% else %>
		        		<a href="#" class="list-group-item disabled"><%= user.name %></a>
		        	<% end %>
		        <% end %>
		      </div>
		      <% if @num_of_grps > 0 %>
		      	<a class="btn btn-lg center-block">Join</a>
		      <% else %>
		      	<a href="#" class="btn btn-lg center-block">Join</a>
		      <% end %>
		    </div>
		  </div>
		</article>
	<% end %>
</div>