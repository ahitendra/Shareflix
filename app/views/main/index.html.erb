
<div class="container full-screen">
  <section class="row">
    <h1 class="title">Shareflix</h1>
    <hr/>
    <div class="col-xs-8 col-xs-offset-2">
      <p class="lead text-center">Watch your favourite TV Shows and Movies for a cheaper cost</p>
      <hr/>
    </div>
  </section>
  <% if current_user.present? %>
  	<% group = current_user.groups.last %>
  	<% if group.present? %>
		  <div class="row">
		    <article class="col-xs-4">
		      <div class="cards"><span class="glyphicon glyphicon-flash icon"></span>
		        <hr class="divider"/>
		        <h2 class="title"><%= group.name %></h2>
		        <div class="list-group">
		        	<% group.users.each do |user| %>
		        		<% if user.id == current_user.id %>
		          		<a href="#" class="list-group-item disabled"><%= user.name %> (me)</a>
		          	<% else %>
		          		<a href="#" class="list-group-item disabled"><%= user.name %></a>
		          	<% end %>
		          <% end %>
		        </div>
		      </div>
		    </article>
		  </div>
		<% end %>
	<% end %>
</div>